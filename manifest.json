{
  "manifest_version": 3,
  "name": "YouTube Redirector",
  "version": "1.1",

  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "action": {
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "permissions": [
    "declarativeNetRequest"
  ],

  "host_permissions": [
    "*://*.youtube.com/*",
    "*://youtu.be/*",
    "*://*.yout-ube.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["redirect.js"],
      "run_at": "document_start"
    }
  ],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
